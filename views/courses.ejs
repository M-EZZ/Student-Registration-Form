<!DOCTYPE html>
<html>
    <head>
        <title>Courses</title>
        <%- include('./partials/headers') %>
        <link rel="stylesheet" href="css/courses.css">
    </head>

    <body>
        <section id="courses-container" class="z-depth-2">
            <h3 class="center-align">Courses</h3>
            <table>
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th>Instructor Name</th>
                        <th>Credit Hours</th>
                    </tr>
                </thead>

                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.name %></td>
                            <td><%= course.description %></td>
                            <td><%= course.instructor_name %></td>
                            <td><%= course.credit_hours %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </section>
    </body>
</html>